{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "typeRoots": ["./@types"],
  "include": ["src/**/*", "@types"],
  "exclude": ["node_modules"]
}
